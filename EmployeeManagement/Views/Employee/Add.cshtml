@model Person
@{
    ViewData ["TitlePhrase"]="Add Employee";
}
<h3> Add New Employee</h3>
<hr/>
<form asp-controller="Employee" asp-action="Add" method="POST">
  <div class="form-group">
    <label asp-for="FirstName"></label>
    <input type="text" class="form-control" asp-for="FirstName" aria-describedby="emailHelp" placeholder="Enter First Name">
    
  </div>
  <div class="form-group">
    <label asp-for="SurName"></label>
    <input type="text" class="form-control" asp-for="SurName" aria-describedby="emailHelp" placeholder="Enter Last Name">
    
  </div>
  <div class="form-group">
    <label asp-for="Address"> </label>
    <input type="text" class="form-control" asp-for="Address" aria-describedby="emailHelp" placeholder="Enter the address">
    
  </div>
  <div class="form-group">
    <label asp-for="Gender"></label>
    <input type="text" class="form-control" asp-for="Gender" aria-describedby="emailHelp" placeholder="Enter Gender">
    
  </div>
  <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="int" class="form-control" asp-for="Salary" aria-describedby="emailHelp" placeholder="Enter the Salary">
    
  </div>
  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>