@model Person;
@{
    ViewData["Title"] = "Add Employee";
}

<h3>Add New Employee</h3>

<form asp-controller="Employee" asp-action="Add" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name" required>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="SurName"></label>
            <span class="text-danger" asp-validation-for="SurName"></span>
            <input type="text" class="form-control" asp-for="SurName" placeholder="Sur Name" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Gender"></label>
            <select name="" asp-for="Gender" class="form-control">
                <option value="m">Male</option>
                <option value="f">Female</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Salary"></label>
            <input type="number" class="form-control" asp-for="Salary" placeholder="Salary">
        </div>
    </div>
    
        <div class="form-group">
            <label asp-for="Address"></label>
            <input type="text" class="form-control" placeholder="Address" asp-for="Address">
        </div>
        
    <button type="submit" class="btn btn-primary">Save Employee</button>
</form>