@model Person;
@{
    ViewData["Title"] = "Update Employee";
    String[] genders={"Male","Female","Others"};

}

<h3>Update Employee</h3>

<form asp-controller="Employee" asp-action="Edit" method="POST">
    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name" required>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="SurName"></label>
            <span class="text-danger" asp-validation-for="SurName"></span>
            <input type="text" class="form-control" asp-for="SurName" placeholder="Sur Name" required>
        </div>
    </div>
    <div class="form-group">
    <label asp-for="Gender"></label>
    @foreach (var gender in genders)
    {  
     <div class="form-check form-check-inline" >   
      <input type="radio" class="form-check-input" asp-for="Gender" id="@gender" value ="@gender[0]"> 
      <label class="form-check-label" asp-for="@gender">@gender </label>
     </div>
    }
   </div>
        <div class="form-group col-md-6">
            <label asp-for="Salary"></label>
            <input type="number" class="form-control" asp-for="Salary" placeholder="Salary">
        </div>
    </div>
    
        <div class="form-group">
            <label asp-for="Address"></label>
            <input type="text" class="form-control" placeholder="Address" asp-for="Address">
        </div>
        
    <button type="submit" class="btn btn-primary">Update Employee</button>
</form>